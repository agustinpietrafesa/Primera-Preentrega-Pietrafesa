<div>
    <h2>Add Product</h2>
    <form action="" method="post">
        <label for="title">Title:</label>
        <input type="title" placeholder="Title" >
        <label for="Description">Description:</label>
        <input type="description" placeholder="Description" >
        <label for="code">Code:</label>
        <input type="code" placeholder="Code" >
        <label for="price">Price:</label>
        <input type="number" placeholder="Price" >
        <label for="category">Category:</label>
        <input type="category" placeholder="Category" >

        <input type="submit" value="Add Product">






    </form>


</div>


<div>
    <h2>Our products in real time:</h2>

    {{#each products}}
        <div>
            <h4>{{this.title}} {{this.description}} {{this.code}} Stock: {{this.stock}} Id: {{this.id}}</h4>
        </div>
    {{/each}}

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>